<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <!-- Dobot Atom 手臂关节接口宏定义 -->
  <xacro:macro name="atom_arm_interfaces" params="name">
    <!-- Note: name parameter is used, but URDF joints already have prefix, so we use name directly -->
    <xacro:property name="prefix" value="${name}"/>

  <!-- 手臂7个关节的 ros2_control 接口定义 -->
  <joint name="${prefix}_shoulder_pitch_joint">
    <command_interface name="position"/>
    <state_interface name="position">
      <param name="initial_value">0.0</param>
    </state_interface>
    <state_interface name="velocity"/>
    <state_interface name="effort"/>
  </joint>

  <joint name="${prefix}_shoulder_roll_joint">
    <command_interface name="position"/>
    <state_interface name="position">
      <param name="initial_value">0.0</param>
    </state_interface>
    <state_interface name="velocity"/>
    <state_interface name="effort"/>
  </joint>

  <joint name="${prefix}_shoulder_yaw_joint">
    <command_interface name="position"/>
    <state_interface name="position">
      <param name="initial_value">0.0</param>
    </state_interface>
    <state_interface name="velocity"/>
    <state_interface name="effort"/>
  </joint>

  <joint name="${prefix}_elbow_pitch_joint">
    <command_interface name="position"/>
    <state_interface name="position">
      <param name="initial_value">0.0</param>
    </state_interface>
    <state_interface name="velocity"/>
    <state_interface name="effort"/>
  </joint>

  <joint name="${prefix}_elbow_roll_joint">
    <command_interface name="position"/>
    <state_interface name="position">
      <param name="initial_value">0.0</param>
    </state_interface>
    <state_interface name="velocity"/>
    <state_interface name="effort"/>
  </joint>

  <joint name="${prefix}_wrist_pitch_joint">
    <command_interface name="position"/>
    <state_interface name="position">
      <param name="initial_value">0.0</param>
    </state_interface>
    <state_interface name="velocity"/>
    <state_interface name="effort"/>
  </joint>

  <joint name="${prefix}_wrist_yaw_joint">
    <command_interface name="position"/>
    <state_interface name="position">
      <param name="initial_value">0.0</param>
    </state_interface>
    <state_interface name="velocity"/>
    <state_interface name="effort"/>
  </joint>

  </xacro:macro>
</robot>
